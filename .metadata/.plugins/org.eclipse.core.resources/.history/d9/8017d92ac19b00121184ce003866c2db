package ru.osm.dkiselev.atlasgenerator;

import java.awt.Rectangle;
import java.awt.geom.Area;
import java.util.logging.Level;
import java.util.logging.Logger;

public class GridGenerator {
	
	private Area coverage;
	private Rectangle[][] grid;
	
	private static final Logger logger = Logger.getLogger(GridGenerator.class.getName());
	
	public GridGenerator(Area coverage) {
		super();
		this.coverage = coverage;
	}

	public Rectangle[][] getGrid() {
		return grid;
	}
	
	public void generate(double bboxWidthM, double bboxHeightM)
	{
		Rectangle coverageBox = coverage.getBounds();
		Point basePoint = new Point(coverageBox.getMinX(), coverageBox.getMinY());
		
		int i = 0;
		Point p = basePoint;
		do {
			p = Calculator.addOffset(basePoint, bboxWidthM, 0);
			i++;
		}while(p.getLon() < coverageBox.getMaxX());

		int j = 0;
		p = basePoint;
		do {
			p = Calculator.addOffset(basePoint, 0, bboxHeightM);
			j++;
		}while(p.getLat() < coverageBox.getMaxY());
		
		logger.log(Level.INFO, "Grid size {0}Ñ…{1}", new int[]{i, j});
		
		grid = new Rectangle[i][j];
		
	}
	
}
